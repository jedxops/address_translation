        <input id="formBox" type="text" name= "answer" style="display:none;" value = "  {{items.question_numerical_answer}}">
        </input>
        <input id="formBox" type="text" name= "input" placeholder = "Type your answer here">
        </input> <!--every starting tag should have a closing tag! //-->
        <input type="submit" value="Next">
        </input>
   </form>
   </div>
  </body>
