  <body>
    <h1>Results</h1>

    {{~> page}}

    <div>

    <button id="goBack" type="button"><a href="/static/index.html">Go Back</a></button>

    <!--form action="/showsteps" method = "post"-->

    <form action="/showsteps" method = "post">
        <input id="formBox" type="text" name= "prompt" style="display:none;" value = "  {{items.question_prompt}}">
        </input>
        <input id="formBox" type="text" name= "answer_format" style="display:none;" value = "  {{items.answer_format}}">
        </input>
